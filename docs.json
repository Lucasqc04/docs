{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "PagueBit API Docs",
  "colors": {
    "primary": "#FF6B00",
    "light": "#FF6B00",
    "dark": "#FF6B00"
  },
  "logo": {
    "light": "/logo_completa.png",
    "dark": "/logo_completa.png"
  },
  "favicon": {
    "light": "/logo.png",
    "dark": "/logo.png"
  },
  "fonts": {
    "family": "Lexend Deca, sans-serif"
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude"]
  },
  "api": {
    "mdx": {
      "server": "https://sua-api-base-url.com",
      "auth": {
        "method": "bearer"
      }
    },
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript"],
      "defaults": "required",
      "prefill": true
    }
  },
 "navigation": {
  "dropdowns": [
    {
      "dropdown": "Início",
      "icon": "home",
      "pages": ["index"]
    },
    {
      "dropdown": "API Pública",
      "icon": "terminal",
      "groups": [
        {
          "group": "Introdução",
          "pages": ["public-api/introduction"]
        },
        {
          "group": "Autenticação",
          "pages": ["public-api/authentication"]
        },
        {
          "group": "Limites",
          "pages": ["public-api/limits"]
        },
        {
          "group": "Endpoints",
          "openapi": "openapi.json"
        },
        {
          "group": "Webhooks",
          "pages": ["public-api/webhooks"]
        }
      ]
    }
  ]
}
}
