{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "PagueBit API Docs",
  "colors": {
    "primary": "#FF6B00",
    "light": "#FF6B00",
    "dark": "#FF6B00"
  },
  "logo": {
    "light": "/logo_completa.png",
    "dark": "/logo_completa.png"
  },
  "favicon": {
    "light": "/logo.png",
    "dark": "/logo.png"
  },
  "fonts": {
    "family": "Lexend Deca, sans-serif"
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude"]
  },
  "api": {
    "mdx": {
      "server": "https://sua-api-base-url.com",
      "auth": {
        "method": "bearer"
      }
    },
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript"],
      "defaults": "required",
      "prefill": true
    }
  },
  "navigation": {
    "groups": [
